if ("<%= messages.any? %>" == "true") {
	/* Display a notice */
	$("#conversation_notice").html('<div class="conversation_notice"><%= t("layouts.notifications.#{flash[:message_notice]}") %></div');

	/* Add the new message to the bottom of the message list */
	$("#messages").append("<%= escape_javascript(render(:partial => 'conversations/message_row', collection: messages, as: :message_or_action)) %>");
	$("#message<%= messages.any? ? messages.last[:id].to_s : '' %>").effect("highlight", {}, 3000);

	/* Reset the message form */
	$("#new_message")[0].reset();

	/* Enable send button */
	$('#new_message button').removeAttr('disabled');
	$('#new_message button').empty().append('<%= t("conversations.show.send_reply") %>');
	scrollToBottom();


	/* for live pull 3/13 Joelle */
	$('#message_last_viewed_time').val('<%= @last_viewed_time %>')

	/* '<%= @messages.first %>' */
}
