/ Footer
%footer
  / Select language
  .container
    #language-select-wrap.row
      / Desktop version
      #desktop-language-select.btn-group
        / Select language button
        %button.btn.btn-language.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
          %i.fa.fa-globe.language-icon{"aria-hidden" => "true"}
          Select language
          %i.fa.fa-caret-up
        / Language dropup
        %ul.dropdown-menu.drop-up{:role => "menu"}
          %li.english-lang.active-lang
            %a{:href => "#", :title => "English"}
              English
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
          %li.french-lang
            %a{:href => "#", :title => "French"}
              French
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
          %li.chinese-lang
            %a{:href => "#", :title => "Chinese"}
              Chinese
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
        / /.dropdown-menu drop-up
      / /.btn-group#desktop-language-select
      / Mobile-tablet version
      #mobile-tablet-language-select-wrapper
        %ul
          %li#language-select-header
            %i.fa.fa-globe.language-icon{"aria-hidden" => "true"}
            Select language:
          %li.english-lang.active-lang
            %a{:href => "#", :title => "English"}
              English
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
          %li.french-lang
            %a{:href => "#", :title => "French"}
              French
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
          %li.chinese-lang
            %a{:href => "#", :title => "Chinese"}
              Chinese
              %i.fa.fa-check.language-check{"aria-hidden" => "true"}
      / #mobile-tablet-language-select-wrapper
    / #language-select-wrap
  / /.container
